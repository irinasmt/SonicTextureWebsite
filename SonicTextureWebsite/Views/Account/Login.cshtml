@using WebApplication2.Models

@{
    Layout = "~/Views/shared/_Layout.cshtml";
}

@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}   

<section class="g-bg-gray-light-v5">
    <div class="container g-py-100">
        <div class="row justify-content-center">
            <div class="col-sm-8 col-lg-5">
                <div class="u-shadow-v21 g-bg-white rounded g-py-40 g-px-30">
                    <header class="text-center mb-4">
                        <h2 class="h2 g-color-black g-font-weight-600">Login</h2>
                    </header>
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "g-py-15", role = "form" }))
                      {
                        @Html.AntiForgeryToken()                        
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "g-color-gray-dark-v2 g-font-weight-600 g-font-size-13" })
                            <div class="mb-4">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="g-mb-35">
                            @Html.LabelFor(m => m.Password, new { @class = "g-color-gray-dark-v2 g-font-weight-600 g-font-size-13" })
                            <div class="">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15 mb-3" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="row justify-content-between">
                                <div class="col align-self-center text-right">
                                    @Html.ActionLink("Forgot your password?", "ForgotPassword",null, new { @class = "g-font-size-12" })
                                </div>
                            </div>
                        </div>
                       <div class="form-group">
                            <div class="mb-4">
                                <button class="btn btn-md btn-block u-btn-primary rounded g-py-13" type="submit">Login</button>
                            </div>
                        </div>
                      }
              <footer class="text-center">
                <p class="g-color-gray-dark-v5 g-font-size-13 mb-0">Don't have an account?@Html.ActionLink(" sign up", "Register",null, new { @class= "g-font-weight-600" })
                </p>
              </footer>
            </div>
          </div>
        </div>
      </div>
</section>
